{
  "name": "styled-jsx-with-system",
  "version": "1.0.0",
  "repository": "murillo94/styled-jsx-system",
  "license": "MIT",
  "main": "./dist/index.js",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "lint": "prettier --write '**/*.jsx'",
    "build": "babel src -d dist"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "objss": "^1.0.3",
    "styled-jsx": "^3.2.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-transform-modules-commonjs": "^7.7.5",
    "@babel/plugin-transform-template-literals": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "babel-eslint": "^10.0.3",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^6.6.0",
    "prettier": "^1.19.1"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "styled-jsx": "^3.2.4",
    "styled-system": "^5.1.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "impliedStrict": true,
        "experimentalObjectRestSpread": true
      },
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "react",
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ],
      "no-shadow": "error",
      "import/no-mutable-exports": "error",
      "import/no-anonymous-default-export": [
        "error",
        {
          "allowArray": true,
          "allowArrowFunction": true,
          "allowLiteral": true,
          "allowObject": true
        }
      ],
      "no-extra-semi": 0,
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 0,
      "react/no-unescaped-entities": 0,
      "react/jsx-no-target-blank": 0,
      "react/no-string-refs": 0
    }
  },
  "eslintIgnore": [
    "**/node_modules/**/**",
    "**/.next/**/**"
  ]
}
